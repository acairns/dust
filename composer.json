{
    "name": "acairns/dust",
    "type": "library",
    "require": {
        "php": "^7.4 | ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Acairns\\Dust\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/"],
        "exclude-from-classmap": [
            "tests/**Test.php"
        ]
    },
    "authors": [
        {
            "name": "Andrew Cairns",
            "email": "andrew@acairns.co.uk"
        }
    ],
    "scripts": {
        "analyse": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix ./src --dry-run",
        "test": "phpunit ./tests"
    }
}
